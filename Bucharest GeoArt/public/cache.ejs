<!DOCTYPE html>
<html>
<head>
  <title>GeoArt București</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    .center {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 90vh;
    }
    @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap');
    body {
      font-family: 'Roboto', sans-serif;
    }
    div {
      font-size: 1.5em;
      padding: 20px;
      font-weight: bold;
      text-transform: uppercase;
      padding-bottom: 10px;
    }
    input {
      width: 420px;
      font-size: 1.275em;
      padding: 10px;
      text-align: center;
    }
    button {
      line-height: 1;
      font-size: 0.9em;
      padding: 10px;
      margin: 10px;
    }
    @media only screen and (max-width: 480px) {
      .center {
        flex-direction: column;
      }
      input {
        width: 90%;
      }
    }
    .small {
      font-size: inherit;
    }
  </style>
  
  <script defer>
    document.addEventListener("DOMContentLoaded", () => {
      if (window.location.search.includes("incorrect")) {
        document.getElementById("incorrect").style.display = "block";
        window.history.replaceState(null, "", window.location.origin + window.location.pathname);
      }
    });
  </script>
</head>
<body>
  <div class="center">
    <div class="small">București - <%= letter %>#<%= number %></div>
    <div class="small"><%= topic %></div>
    <div><%= question %></div>
    <form action="/BucharestGeoArt/cache/<%= letter %>/<%= number %>/check" method="POST">
      <input type="text" name="answer" placeholder="English or Romanian OK">
      <button type="submit">CHECK ANSWER</button>
    </form>
    <div id="incorrect" style="color: red; display: none">INCORRECT!</div>
  </div>
</body>
</html>
